
# redirect to https
server {
	listen *:80;
  server_name bmegio-test.ddns.net;
	return 301 https://$host$request_uri;
}

server {
  listen 443 ssl http2;
  listen [::]:443 ssl http2;

  server_name bmegio-test.ddns.net;
  ssl_certificate /etc/letsencrypt/live/bmegio-test.ddns.net/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/bmegio-test.ddns.net/privkey.pem;

  # content
  location / {
    root /usr/share/nginx/bmegio-test.ddns.net;
    try_files $uri $uri/index.html $uri.html =404;
  }
  # data
  location /data {
    alias /usr/share/nginx/bmegio-test.ddns.net.data/; # directory to list
    autoindex on;
  }
  # share
  location /share {
    alias /usr/share/nginx/bmegio-test.ddns.net.share/; # directory to list
    autoindex on;
  }
  # for certbot challenge
  location /.well-known/acme-challenge/ {
      root /var/www/certbot;
  }

	##
  # oath setup
	# grip protected paths
	##
	include /etc/nginx/grip-bmegio-test.ddns.net.conf;


}
